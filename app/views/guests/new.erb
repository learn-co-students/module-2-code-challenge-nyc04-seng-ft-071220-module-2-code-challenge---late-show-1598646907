<h1> New Guest</h1>
<%= button_to "Home", root_path, :method => "get" %>
<hr>

<%if @errors %>
     <% @errors.each do |error| %>
       <p style="color: red"> <%=error%>
    <%end%>
<%end%>



<%= form_for @guest do |f| %>
<%= f.label :full_name%>
<%= f.text_field :name%><br>
<br>
<%= f.label :occupation%>
<%= f.text_field :occupation%><br>
<br>

<%= f.submit %>

<%end%>


