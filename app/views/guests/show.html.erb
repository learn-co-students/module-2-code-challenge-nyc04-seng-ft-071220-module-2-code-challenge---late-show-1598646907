<div class="container">
    <h1> Guest Show Page</h1>
    <h2> <%= @guest.name %> </h2>

    <div class="row">
        <div class="col">
            <ul>
                <% @guest.episodes.each do |episode|%>
                    <li> <%= link_to episode.date, episode_path(episode) %> - <%= @guest.get_rating(episode.id) %> </li> <%# get_rating logic written in Guest model %>
                <% end %>
            </ul>
        </div>
    </div>
</div>

