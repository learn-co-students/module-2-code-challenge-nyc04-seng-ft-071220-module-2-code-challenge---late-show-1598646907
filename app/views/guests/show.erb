<h1> <%=@guest.name%> </h1>
<h2> <%=@guest.occupation %> </h2>
<%= button_to "Home", root_path, :method => "get" %>
<hr>

<h3>Appearance</h3>

<ul>
    <% @guest.episodes.each do |episode| %>
    <li>
        <% @appearance = @guest.appearances.find_by(episode: episode) %>  
        Episode: <%=episode.number%> - Date: <%= link_to episode.date, episode_path(episode) %> 
        - Rating: <%= @appearance.rating %> <br> 
         <%end%>
    </li>
</ul>