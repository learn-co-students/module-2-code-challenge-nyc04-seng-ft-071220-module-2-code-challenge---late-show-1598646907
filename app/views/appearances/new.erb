<h1> New Appearance Form </h1>

<% if @errors %>
<% @errors.each do |error| %>
    <p style = "color: red" > Error: <%= error %> </p>
<% end %>
<% end %>

<%= form_for @appearance do |f| %>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, @guests, :id, :name %> <br>
    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, @episodes, :id, :number %> <br>
    <%= f.label :rating %>
    <%= f.number_field :rating %> <br>
    <%= f.submit "Submit!" %>
<% end %>