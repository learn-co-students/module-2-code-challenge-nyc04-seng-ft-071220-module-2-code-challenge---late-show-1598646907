<h1> Create a new appearance! </h1>

<% if @errors %>
  <% @errors.each do |error|%>
    <p style= "color: red"> <%= error %></p>
  <% end %>
<% end %>

<%= form_for @appearance do |f| %>
    <%= f.label :guest_id, "Guest:" %>
    <%= f.collection_select :guest_id, @guests, :id, :name %> <br>
    
    <%= f.label :episode_id, "Episode:" %>
    <%= f.collection_select :episode_id, @episodes, :id, :number %> <br>

    <%= f.label :rating, "Rating:" %>
    <%= f.number_field :rating %> <br>

    <%= f.submit "Submit" %>
<% end %>