<% if @errors %>
    <% @errors.each do |e| %>
        <p style= "color:red"><%= e %></p> <br>
    <% end %>
<% end %>



<%= form_for @appearance do |f|%>
    Guest name: <%= f.collection_select :guest_id, Guest.all, :id, :name %><br>
    Episode number: <%= f.collection_select :episode_id, Episode.all, :id, :number %><br>
    Rating : <%= f.text_field :rating %><br />
    <%= f.submit %>
<% end %>