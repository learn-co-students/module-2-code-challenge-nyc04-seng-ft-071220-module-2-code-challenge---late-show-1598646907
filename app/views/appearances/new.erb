<h1>New Appearance Form</h1>

<% if @errors %>
    <% @errors.each do |error| %>
       <p style="color: red"> <%=error%>
    <%end%>

<%end %>

<%= form_for @appearance do |f| %>
<%= f.label :rating %>
<%= f.number_field :rating%>

<%= f.label :guest%>
<%= f.collection_select :guest_id, Guest.all, :id, :name %>

<%= f.label :Episode_Number%>
<%= f.collection_select :episode_id, Episode.all, :id, :number %>

<%= f.submit "Submit Now"%>

<%end%>


