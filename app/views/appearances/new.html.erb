<h1>Creat New Appearance</h1>

<%#not sure how below flash works%>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<div>
<%= form_for @appearance do |f| %>
<%=f.collection_select(:guest_id, @guests, :id, :name) %><br>
<%=f.collection_select(:episode_id, @episodes, :id, :date) %><br>
<%=f.label :rating %><br>
<%=f.number_field :rating %>
<%=f.submit "Submit"%>
<% end %>

</div>
